<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red;"> <%= e %> </p>
  <% end %>
<% else %>
    <p>what a nice little doctor</p>
<% end %>

<%= form_for @doctor do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :specialty %>
  <%= f.text_field :specialty %>

  <%= f.collection_select :office_id, @offices, :id, :capacity_and_address %>

  <%= f.collection_check_boxes :patient_ids, @patients, :id, :name %>

  <%= f.submit %>
<% end %>
